<%- include("partials/newHeader1.ejs", {data: "Landing Page" })%> <!-- This is the header for the landingPage-->
    <!-- Landing Page BackgroundImage -->
    <div class="backgroundImage">

    <div class="container small_box d-flex text-center justify-content-center align-items-center"> <!-- This is the first route the user is going to see when the website is launched
it will ask the user to login if they already have an account or to make one if they do not have one-->
        <div class="boxMessage">
        <h1 class="overview"> Let's go together!</h1>
        <p class="landingPage_subtext">Strangers are just friends you haven't met!</p>
        <div class="landingPage_labels">
            <form style="margin-bottom:20px"; action="/homePage" method="get">
                <!-- user input here -->
                <label>Email:</label>
                <input
                type="email"
                name="email" required>
                <br>

                <label>Password:</label>
                <input
                type="password"
                name="Password"
                maxlength="20"
                minlength="6"
                required>
                <br>

                <!-- log in Button that authenticated a user if they have an account or sends them back to this route if their login failed -->
                <div class="button1">
                    <button class="btn1-style"
                    type="submit">Log in</button>
                </div>
            </form>
        </div>

        <!-- Sign Up Button that takes a user to the signup page where they can enter information to create their account -->
        <div class="rightBtn">
            <a href="/signupPage">
                <button class="btn2-style"
                type="submit">Sign up</button></a>
        </div>

        <br>
        <br>
        <br>
        </div>
    </div>
    </div>

    <%- include("partials/footer.ejs") %> <!-- This is the footer for the landingPage-->
