<%- include("partials/newHeader1.ejs", {data: "Sign Up"})%> <!-- This is the header for the signupPage -->

<div class="small_box_container"> <!-- This div will collect the information that the user would like to use to create their
                                        account and once filled out, will be sent to the database upon pressing Create Account-->
    <h1 class="title">Sign up</h1>
    <div class="signupPage_labels">
        <form style="margin-bottom:20px"; action="/createAccount" method="post">
            <label for="User_Username">Username:</label>
            <input
            type="text"
            name="Username"
            maxlength="15"
            id="User_Username"
            placeholder="Max of 15 characters"
            required>
            <br>

            <label for="User_Email">Email:</label>
            <input
            type="email"
            name="Email"
            id="User_Email"
            required>
            <br>

            <label for="User_Password">Password:</label>
            <input
            type="password"
            name="Password"
            maxlength="20"
            minlength="6"
            id="User_Password"
            placeholder="Must be 6-20 characters long"
            required>
            <br>

            <div class="button2" class="createProfileBtn"> <!-- This button fires the /createAccount route -->
            <button class="btn2-style" type="submit">Create Account</button>
            <p class="small_text"></p>
            </div>
        </form>

        <div class="leftBtn"> <!-- This button will send you back to the landingPage-->
            <a href="/landingPage">
            <button class="btn1-style"
            type="submit">Log in</button></a>
            <p class="small_text">I have an account</p>
        </div>
    </div>
        <br>
        <br>
        <br>
</div>

<%- include("partials/footer.ejs") %> <!-- This is the footer for the signup Page-->
