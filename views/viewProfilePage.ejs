<%- include("partials/header2.ejs", {data: "View Profile"})%>

<% for (let element of Users) { %>
    <div class="box_containerCreate">
        <div>
        <p class="title">Profile</p>
        <img src="<%=element.Profile_Image%>" alt="" class="ImageHere">
        <ul class="ProfileView">
            <li> First Name: <%= element.First_Name %> </li>
            <li> Last Name: <%= element.Last_Name %> </li>
            <li> Birthday: <%= element.Birthday %> </li>
            <li> Age: <%= element.Age %> </li>
            <li> Gender: <%= element.Gender %> </li>
            <li> Current City: <%= element.Current_City %> </li>
            <li> Hometown: <%= element.Hometown %> </li>
            <li> Profession: <%= element.Profession %> </li>
            <li> Interests: <%= element.Interests %> </li>
            <li> Favorite movie: <a href="/movieInfoPage?titlesearch=<%= element.Favorite_Movie %>"> <%= element.Favorite_Movie %></a></li>
            <li> Favorite Artist: <%= element.Favorite_Artist %> </li>
            <li> Favorite Food: <%= element.Favorite_Food %> </li>
            <li> Languages: <%= element.Languages %> </li>
            <li> Brief Summary: <%= element.More_About_You %> </li>
        </ul>
    </div>

    <!-- button#1 code -->
    <div class="button1">
        <form action="/createProfilePage" method="get">
        <button class="btn1-style"
        type="submit">Edit</button>
        </form>
    </div>

    <!-- button#2 code -->
    <div class="button2">
        <form action="/homePage" method="get">
        <button class="btn2-style"
        type="submit">Finish</button>
    </form>

    <br>
    <br>
    </div>
    </div>

<% } %>

